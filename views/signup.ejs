<!-- Display an error if it exists -->
<% if (typeof error !=='undefined' ) { %>
    <p style="color:red;">
        <%= error %>
    </p>
<% } %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Sign Up</title>
        <link rel="stylesheet" href="/common.css">
        <link rel="stylesheet" href="/forms.css">
    </head>

    <body>
        <% if(env == test)
        <%- include("partials/index.ejs") %>
        <%- include("partials/viewcount.ejs") %>
        <main>
            <form name="signup" action="/signup" method="POST">
                <label for="email">Email:</label><br>
                <input type="email" name="email" id="email" placeholder="Email" required autocomplete="email" maxlength="64"><br>

                <label for="username">Username:</label><br>
                <input type="text" name="username" id="username" placeholder="Username" required autocomplete="username" maxlength="32"><br>

                <label for="password">Password:</label><br>
                <input type="password" name="password" id="password" placeholder="Password" required autocomplete="current-password" maxlength="32"><br>

                <button type="submit" class="align-center">Create Account</button>
                <p> or <a href="/login">go to Login</a></p>
            </form>
            <a id="idx" href="index">index</a>

        </main>
    </body>

    </html>